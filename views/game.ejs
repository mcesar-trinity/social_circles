<%- include('./partials/header') %>

    <body>
        <div class="tasks"> 
            <select name="task-options" id="task-options">
                <% tasks.forEach((task) => { %>
                    <option value=" <%=task%> "><%=task%></option>
                <% }) %> 
            </select>
        </div>

        <div class="info-section">
            <div class="character-groups">
                <% for(var x = 1; x < 4; x++) { %>
                    <button class="group">
                        <h2>Group #<%=x%>:</h2>

                        <% for(var y = 0; y < characterGroups[0].length; y++) { %>
                            <div class="character">
                                <h3 class="name"><%=characterGroups[x-1][y].name%></h3>
                                <h3 class="score"><%=characterGroups[x-1][y].happiness_score%></h3>
                            </div>
                        <% } %>
                    </button>
                <% } %>
            </div>
            
            <div class="leaderboard-section">
                <div class="info"> 
                    <h2>Top 5 Player</h2>
                    <h3>Placeholder</h3>
                </div>

                <div class="game-to-leaderboard">
                    <form action="/leaderboard">
                        <button type="submit" id="leaderboard" name="option" value="Leaderboard">Leaderboard</button>
                    </form>
                </div>
            </div>
        </div>


        <div class="assign-task">
            <form action="/game">
                <button type="submit" id="assign-task-button" value="assign-task">Assign Task</button>
            </form>
        </div>

    </body>

</html>